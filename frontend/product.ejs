<%- include('./engine/header'); %>

        <!-- Header-->
        <header class="py-5">
            <div class="container px-lg-5">
                <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
                    <div class="m-4 m-lg-5">
                        <h1 class="display-5 fw-bold">Putra Darma PWA</h1>
                        <p class="fs-4">Selamat Datang di Aplikasi Putra Darma berbasis Proggresive Web App (PWA)  Aplikasi ini dirancang untuk membantu pegawai & admin dalam memasukan barang </p>
                    </div>
                </div>
            </div>
        </header>
        <!-- Page Content-->
        <section class="pt-4">
            <div class="container px-lg-5">
                <!-- Page Features-->
                <div class="row gx-lg-5">
                    <div class="col-lg-12">
                        <script>
                            const loginUser = async form => {
                                try {
                                    const response = await fetch('/api/sales/add', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                        body: JSON.stringify({
                                            products: form.products.value,
                                            qty: form.qty.value
                                        })
                                        
                                    });
                                    const data = await response.json()
                                    if (data.result === 'SUCCESS') {
                                        location.reload();
                                    } else {
                                        alert('message: ' + data.message + '');
                                    }
                                } catch(e) {
                                    console.error(e);
                                    alert('Request error!');
                                }
                            };
                    
                        </script>

                        <form method="post" onsubmit="loginUser(this); return false;">
                            <div class="box-body">                              
                              <div class="form-group">
                              <label for="product">Nama Produk</label>
                                    <select class="form-control" id="products" name="products">
                                        <option value="<%= itemid %>"> <%= itemname %></option>     
                                    </select>
                              </div>

                              <div class="form-group">
                                <label for="qty">Qty</label>
                                <input type="number" class="form-control" id="qty" name="qty" placeholder="Enter Qty" value="<%= itemqty %>" autocomplete="off" />
                              </div>
              
                            </div>
                            <!-- /.box-body -->
                            </br>
                              <button type="submit" class="btn btn-primary">Save Changes</button>
                              <a href="/" class="btn btn-warning">Back</a>
                          </form> 
                    </div>

                </div>
            </div>
        </section>
        <%- include('./engine/footer'); %>