<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>PUTRA DARMA - PWA</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/styles.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.css" />
  
    </head>
    <body>
        <!-- Header-->
        <header class="py-5">
            <div class="container px-lg-5">
                <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
                    <div class="m-4 m-lg-5">
                        <h1 class="display-5 fw-bold">Putra Darma PWA</h1>
                        <p class="fs-4">Selamat Datang di Aplikasi Putra Darma berbasis Proggresive Web App (PWA)  Aplikasi ini dirancang untuk membantu pegawai & admin dalam memasukan barang </p>
                    </div>
                </div>
            </div>
        </header>
        <!-- Page Content-->
        <section class="pt-4">
            <div class="container px-lg-5">
                <!-- Page Features-->
                <div class="row gx-lg-5">
                    <div class="col-lg-12">
                        <script>
                            const loginUser = async form => {
                                try {
                                    const response = await fetch('/api/sales/add', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                        body: JSON.stringify({
                                            products: form.products.value,
                                            qty: form.qty.value
                                        })
                                        
                                    });
                                    const data = await response.json()
                                    if (data.result === 'SUCCESS') {
                                        location.reload();
                                    } else {
                                        alert('message: ' + data.message + '');
                                    }
                                } catch(e) {
                                    console.error(e);
                                    alert('Request error!');
                                }
                            };
                    
                        </script>

                        <form method="post" onsubmit="loginUser(this); return false;">
                            <div class="box-body">                              
                              <div class="form-group">
                              <label for="product">Product</label>
                                  <select class="form-control" id="products" name="products">
                                    <option value="">Select Produk</option>
                                    <% data_products.forEach(function(data) { %>
                                            <option value="<%= data.id %>">Qty : <%= data.qty %> | <%= data.name %></option>     
                                        <% }); %>
                                    </select>
                              </div>

                              <div class="form-group">
                                <label for="qty">Qty</label>
                                <input type="number" class="form-control" id="qty" name="qty" placeholder="Enter Qty" value="" autocomplete="off" />
                              </div>
              
                            </div>
                            <!-- /.box-body -->
                            </br>
                              <button type="submit" class="btn btn-primary">Save Changes</button>
                              <a href="/" class="btn btn-warning">Back</a>
                          </form> 
                    </div>

                </div>
            </div>
        </section>
        <!-- Footer-->
        
        <!-- Bootstrap core JS-->

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>

        <script>
            $(document).ready( function () {
                let table = new DataTable('#example');
            } );
        </script>
    </body>
</html>