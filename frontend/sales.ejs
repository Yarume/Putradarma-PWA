<%- include('./engine/header'); %>
        <!-- Page Content-->
        <section class="pt-4">
            <div class="container px-lg-5">
                <!-- Page Features-->
                <div class="row gx-lg-5">
                    <div class="col-lg-12">
                        <script>
                            const loginUser = async form => {
                                try {
                                    const response = await fetch('/api/sales/add', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                        body: JSON.stringify({
                                            products: form.products.value,
                                            qty: form.qty.value
                                        })
                                        
                                    });
                                    const data = await response.json()
                                    if (data.result === 'SUCCESS') {
                                        document.location.href="/";
                                    } else {
                                        alert('message: ' + data.message + '');
                                    }
                                } catch(e) {
                                    console.error(e);
                                    alert('Request error!');
                                }
                            };
                    
                        </script>

                        <form method="post" onsubmit="loginUser(this); return false;">
                            <div class="box-body">                              
                              <div class="form-group">
                              <label for="product">Product</label>
                                  <select class="form-control" id="products" name="products">
                                    <option value="">Select Produk</option>
                                    <% data_products.forEach(function(data) { %>
                                            <option value="<%= data.id %>">Qty : <%= data.qty %> | <%= data.name %></option>     
                                        <% }); %>
                                    </select>
                              </div>

                              <div class="form-group">
                                <label for="qty">Qty</label>
                                <input type="number" class="form-control" id="qty" name="qty" placeholder="Enter Qty" value="" autocomplete="off" />
                              </div>
              
                            </div>
                            <!-- /.box-body -->
                            </br>
                              <button type="submit" class="btn btn-primary">Save Changes</button>
                              <a href="/" class="btn btn-warning">Back</a>
                          </form> 
                    </div>

                </div>
            </div>
        </section>
        <%- include('./engine/footer'); %>